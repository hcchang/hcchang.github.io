	1-1 打開相機 <br>
	</p>
 


<p> #include <iostream></p>
<p> #include <opencv2/opencv.hpp></p>
<p> #include <opencv2/highgui/highgui.hpp></p>
 
 int main(int argc, char** argv)<br>
 {<br>
 	cv::VideoCapture webCam(0);<br>
 	if (!webCam.isOpened())<br>
 		return -1;<br>
 
 	char key = 'i';<br>
 	cv::namedWindow("Image");<br>
 
 	while (key != 'o')<br>
 	{<br>
 		cv::Mat imgFrame;<br>
 		webCam >> imgFrame;<br>
 
 		cv::imshow("Image", imgFrame);<br>
 		
 		key = cv::waitKey(30);<br>
 	}<br>
 
 	return 0;<br>
 } </p>


